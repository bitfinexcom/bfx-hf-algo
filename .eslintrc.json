{
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "rules": {
    "jsx-quotes": ["error", "prefer-single"],
    "semi": [1, "never"],
    "max-len": 0,
    "import/no-named-as-default": 0,
    "import/no-named-as-default-member": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "lib"
        ]
      }
    }
  },
  "env": {
    "jest": true
  }
}
